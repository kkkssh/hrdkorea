insert into TBL_LAB_TEST_202004 values ('T005','콜레라');

create table tbl_result_202004(
	p_no char(4) not null,
	t_code char(4),
	t_sdate date,
	t_status char(1),
	t_ldate date,
	t_result char(1),
	primary key(p_no,t_code,t_sdate)
);

select * from tbl_result_202004;

