-- [지역코드] 10 : 서울, 20 : 경기, 30 : 강원, 40 : 대구

create table tbl_lab_test_202004(
	t_code char(4) not null,
	t_name varchar2(20),
	primary key(t_code)
);

select * from tbl_lab_test_202004;

